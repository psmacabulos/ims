<%- include('partials/header') %>
    <main class="container py-5 ">
        <div class="row w-50  min-vh-100 align-items-center mx-auto ">

            <form action="/add-item" method="post">
                <h1 class="mb-3 fs-2">Fill up the form to add the new item</h1>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input name="name" type="text" class="form-control" id="name" aria-describedby="name" required>
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <input name="category" type="text" class="form-control" id="category" aria-describedby="name"
                        required>
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input name="quantity" type="number" class="form-control" id="quantity" aria-describedby="name">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="price" t type="text" class="form-control" id="price" aria-describedby="name">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input name="description" type="text" class="form-control" id="description" aria-describedby="name">
                </div>


                <button type="submit" class="btn btn-primary btn-lg">Add</button>
            </form>
        </div>

    </main>

    <%- include('partials/footer') %>