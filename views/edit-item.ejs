<%- include('partials/header') %>
    <main class="container py-5 ">
        <div class="row w-50  min-vh-100 align-items-center mx-auto ">

            <form action="/edit-item/<%= item._id %>/?_method=PATCH" method="post">
                <h1 class="mb-3 fs-2">Update the necessary field</h1>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input value="<%=item.name%>" name="name" type="text" class="form-control" id="name"
                        aria-describedby="name" required>
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <input value="<%=item.category%>" name="category" type="text" class="form-control" id="category"
                        aria-describedby="name" required>
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input value="<%=item.quantity%>" name="quantity" type="number" class="form-control" id="quantity"
                        aria-describedby="name">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input value="<%=item.price%>" name="price" t type="text" class="form-control" id="price"
                        aria-describedby="name">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input value="<%=item.description%>" name="description" type="text" class="form-control"
                        id="description" aria-describedby="name">
                </div>


                <button type="submit" class="btn btn-primary btn-lg">Update</button>
            </form>
        </div>

    </main>

    <%- include('partials/footer') %>